<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerencia_Movil.Pages.Login"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Image
            Source="dotnet_bot.png"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a submarine number ten" />

            <Label
            Text="Usuario" />
            <Entry 
            x:Name="EntryUsuario"
            Placeholder="Ingrese su usuario" />

            <Label
            Text="Contraseña" />
            <Entry 
            x:Name="EntryContrasena"
            Placeholder="Ingrese su contraseña"
            IsPassword="True" />

            <Button
            x:Name="LoginBtn"
            Text="Click me" 
            Clicked="ButtonIniciarSesion_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>