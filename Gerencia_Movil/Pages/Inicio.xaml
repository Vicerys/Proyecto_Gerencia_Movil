<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerencia_Movil.Pages.Inicio"
             Title="Inicio">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Actividades" Clicked="Button_Clicked"/>
        <Button Text="Dispositivos" Clicked="Button_Clicked_1"/>

        <ImageButton 
            Source="usuario.png"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            HeightRequest="100"
            WidthRequest="100"
            Clicked="Button_UsuarioDetalle"/>

    </VerticalStackLayout>
</ContentPage>