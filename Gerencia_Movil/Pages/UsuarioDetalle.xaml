<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerencia_Movil.Pages.UsuarioDetalle"
             Title="UsuarioDetalle">
    <VerticalStackLayout>
        <Label 
            Text="Información del usuario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image 
            Source="circulo_de_usuario.png"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            HeightRequest="100"
            WidthRequest="100"/>
        <Label
            x:Name="LabelUsuario"
            Text="Usuario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />   

        <Label 
            x:Name="LabelNombreUsuario"
            Text="Nombre"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            x:Name="LabelPuesto"
            Text="Técnico"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="LabelUbicacion"
            Text="Ubicación"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Cerrar modal" 
            VerticalOptions="End"
            HorizontalOptions="End"
            Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>